# Server Configuration
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000

# CORS Configuration
# Single origin
# CORS_ORIGIN=http://localhost:3000
# Or multiple origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,https://aam-frontend-olive.vercel.app/
# Note: All *.vercel.app domains are automatically allowed for Vercel preview deployments

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/arshinagar-accounts
MONGODB_TEST_URI=mongodb+srv://username:password@cluster.mongodb.net/arshinagar-accounts-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d

# SMS Gateway Configuration (Bangladeshi Provider)
SMS_GATEWAY_URL=https://api.smsgateway.bd/api/send
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=Arshinagar
SMS_ENABLED=false

# Timezone
TZ=Asia/Dhaka

# Cron Jobs Configuration
ENABLE_CRON_JOBS=false
INSTALLMENT_REMINDER_DAYS=3
CHEQUE_ALERT_TIME=09:00

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (Optional for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@arshinagar.com

# System Defaults
DEFAULT_OFFICE_CHARGE_PERCENT=10
DEFAULT_CURRENCY=BDT
DEFAULT_LOCALE=bn-BD

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info
